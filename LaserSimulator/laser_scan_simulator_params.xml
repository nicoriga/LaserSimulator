<?xml version="1.0"?>
<opencv_storage>

<!-- Path di lettura della mesh -->
<path_read_file>"../dataset/prodotto.stl"</path_read_file>

<!-- Path di salvataggio della cloud -->
<path_save_file>"../result/final_cloud.pcd"</path_save_file>

<!-- Parametri di simulazione -->
<baseline>600.</baseline>					          <!-- [500, 800] mm (consigliato: 500) -->
<height_from_mesh>1100.</height_from_mesh>	<!-- Consigliato: 1500 --> 
<laser_aperture>45.</laser_aperture>		    <!-- [30, 45] gradi (consigliato: 45) -->
<laser_inclination>60.</laser_inclination>	<!-- [60, 70] gradi (consigliato: 70) -->
<number_of_line>550</number_of_line>	     	<!-- Sparse: 250, Dense: 550 -->
<scan_speed>100.</scan_speed>               <!-- [100, 1000] mm/s -->
<scan_direction>1</scan_direction>		    	<!-- Asse Y = 1, Asse X = 0 -->
<undistortion_flag>0</undistortion_flag>    <!-- Rimozione distorsione attiva = 1 -->
<snapshot_save_flag>0</snapshot_save_flag>	<!-- Salvataggio foto attivo = 1 -->
<roi_1_start>0</roi_1_start>                <!-- Inizio ROI 1 -->
<roi_2_start>544</roi_2_start>              <!-- Inizio ROI 2 -->
<roi_dimension>544</roi_dimension>          <!-- Dimensione ROI -->
  

<!-- Parametri della camera -->
<camera_fps>100.</camera_fps>               <!-- [100, 500] fps -->
<image_width>2024</image_width>
<image_height>1088</image_height>
<pixel_dimension>5.5e-03</pixel_dimension>  <!-- 5,5 um -->
<camera_matrix type_id="opencv-matrix">
  <rows>3</rows>
  <cols>3</cols>
  <dt>d</dt>
  <data>
    4.61504e+03 0. 1.11341e+03 
    0. 4.61551e+03 4.80016e+02 
    0. 0. 1.</data></camera_matrix>
<camera_distortion type_id="opencv-matrix">
  <rows>5</rows>
  <cols>1</cols>
  <dt>d</dt>
  <data>
    -5.06472e-02 -1.45132e+00
    8.68025e-04 2.98601e-03 8.92225e+00</data></camera_distortion>
</opencv_storage>
